import java.util.Scanner;

public class Classnumber94 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        int record27 = 0;
        int result30 = 0;
        
        while (true) {
            int index44 = scanner.nextInt();
            if (index44 == 0) break;
            
            if (index44 > record27) {
                record27 = index44;
                result30 = 1;
            } else if (index44 == record27) {
                result30++;
            }
        }
        
        System.out.println("Максимальный элемент: " + record27);
        System.out.println("Количество элементов, равных максимуму: " + result30);
        
        scanner.close();
    }
}
