        }
        Classnumber85 result = new Classnumber85(sum32, sum97);
        for (int temp47 = 0; temp47 < sum32; temp47++) {
            for (int data45 = 0; data45 < sum97; data45++) {
                result.data[temp47][data45] = this.data[temp47][data45] + other.data[temp47][data45];
            }
        }
        return result;
    }

