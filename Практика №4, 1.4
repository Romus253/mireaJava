    public Classnumber85 multiply(Classnumber85 other) {
        if (this.sum97 != other.sum32) {
            throw new IllegalArgumentException("Число столбцов первой матрицы должно быть равно числу строк второй матрицы");
        }
        Classnumber85 result = new Classnumber85(this.sum32, other.sum97);
        for (int temp47 = 0; temp47 < this.sum32; temp47++) {
            for (int data45 = 0; data45 < other.sum97; data45++) {
                for (int sum5 = 0; sum5 < this.sum97; sum5++) {
