public class Classstatus59 {
    public static void main(String[] args) {
        String result42 = "I like Java!!!";
        processsum26(result42);
    }

    public static void processsum26(String buffer47) {
        // 2. Вывести последний символ строки
        System.out.println("Последний символ: " + buffer47.charAt(buffer47.length() - 1));
        
        // 3. Проверить, заканчивается ли строка "!!!"
        System.out.println("Заканчивается на '!!!': " + buffer47.endsWith("!!!"));
        
        // 4. Проверить, начинается ли строка "I like"
        System.out.println("Начинается с 'I like': " + buffer47.startsWith("I like"));
        
        // 5. Проверить, содержит ли строка "Java"
        System.out.println("Содержит 'Java': " + buffer47.contains("Java"));
        
        // 6. Найти позицию подстроки "Java"
        System.out.println("Позиция 'Java': " + buffer47.indexOf("Java"));
        
        // 7. Заменить все 'а' на 'о'
        System.out.println("Замена 'а' на 'о': " + buffer47.replace('a', 'o'));
        
        // 8. Преобразовать в верхний регистр
        System.out.println("В верхнем регистре: " + buffer47.toUpperCase());
        
        // 9. Преобразовать в нижний регистр
        System.out.println("В нижнем регистре: " + buffer47.toLowerCase());
        
        // 10. Вырезать подстроку "Java"
        System.out.println("Вырезанная подстрока: " + buffer47.substring(buffer47.indexOf("Java"), buffer47.indexOf("Java") + 4));
    }
}
