public class Classelement54 {
    public static void main(String[] args) {
        double buffer3 = 3.14;

        String average55 = Double.toString(buffer3);
        String amount72 = String.valueOf(buffer3);
        String node27 = buffer3 + "";
        String node70 = String.format("%.2f", buffer3); // Округление до двух знаков

        System.out.println("Double.toString: " + average55);
        System.out.println("String.valueOf: " + amount72);
        System.out.println("Сложение с пустой строкой: " + node27);
        System.out.println("String.format (2 знака после запятой): " + node70);
    }
}
